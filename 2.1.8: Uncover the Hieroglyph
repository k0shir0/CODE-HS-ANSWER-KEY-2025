
move();
while(frontIsClear()){
    
    if(colorIs(Color.green)){
        paint(Color.yellow);
        move();
    } else if(colorIs(Color.purple)){
        paint(Color.yellow);
        move();
    }else{
        paint(Color.grey);
        move();
    }
}
turnLeft();
move(); 
turnLeft();
